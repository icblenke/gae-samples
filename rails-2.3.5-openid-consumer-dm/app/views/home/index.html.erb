<% content_for :head do %>
<%= stylesheet_link_tag 'openid', :media => :screen, :cache => false %>
<%= javascript_include_tag 'openid-jquery', :cache => false %>

  <script type="text/javascript">
	$(document).ready(function() {
	    openid.init('openid_identifier');
	});
	</script>
<% end %>

<% form_tag openid_start_url,  :id => 'openid_form' do %>
	
  <div id="openid_choice">
		  <p>Please click your account provider:</p>
		  <div id="openid_btns"></div>
  </div>

  <div id="openid_input_area">
	  <input id="openid_identifier" name="openid_identifier" type="text" value="http://" />
	  <input id="openid_submit" type="submit" value="Sign-In"/>
  </div>
<%# </form>%>
<% end %>
<hr />
<div class="text">
  <p class="small">More samples coming soon (hopefully) @ <a href="http://github.com/azazeal/gae-samples">github.com</a></a></p>
</div>